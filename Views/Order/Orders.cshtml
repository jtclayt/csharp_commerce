@model Order[]

<h1>Your Orders</h1>

<table class="table table-hover">
  <thead>
    <th>Customer Name</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Date</th>
  </thead>
  <tbody>
    @foreach (Order o in Model)
    {
      <tr>
        <td>@o.Customer.FirstName @o.Customer.LastName</td>
        <td>@o.OrderedProduct.Name</td>
        <td>@o.Quantity</td>
        <td>@o.CreateAt.ToLongDateString()</td>
      </tr>
    }
  </tbody>
</table>
